<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <%= image_tag("everest.jpg", class: "img-fluid", style: "border-radius: 1rem 0 0 1rem;") %>
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

                <%= form_with url: registrations_path, model: @user do |f| %>
                  <div class="d-flex align-items-center mb-3 pb-1">
                    <span class="h1 fw-bold mb-0">Everest</span>
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Create your account</h5>

                  <div class="form-outline mb-4">
                    <%= f.label :name, "Name"%>
                    <%= f.text_field :name, placeholder: "John Doe", required: true %>
                    <%= f.error_message_for :name %>
                  </div>

                  <div class="form-outline mb-4">
                    <%= f.label :email, "Email address"%>
                    <%= f.email_field :email, placeholder: "local-part@domain", required: true %>
                    <%= f.error_message_for :email %>
                  </div>

                  <div class="form-outline mb-4">
                    <%= f.label :password, "Password" %>
                    <%= f.password_field :password, placeholder: "••••••••••", required: true %>
                    <%= f.error_message_for :password %>

                    <div class="mt-2">
                      <div class="form-text">Requirements:</div>
                      <ul class="form-text">
                        <li>Minimum 10 characters</li>
                        <li>At least two uppercase letters</li>
                        <li>At least two lowercase letters</li>
                        <li>At least two numbers</li>
                        <li>At least two special character</li>
                      </ul>
                    </div>
                  </div>

                  <div class="pt-1 mb-4">
                    <%= f.submit "Login", class: "w-100" %>
                  </div>

                  <p class="mb-5 pb-lg-2" style="color: #393f81;">Already have a account? <%= link_to "Sign in", new_session_path, style: "color: #393f81;" %></p>
                  
                <% end %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
