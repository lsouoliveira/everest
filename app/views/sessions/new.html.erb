<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <%= image_tag("everest.jpg", class: "img-fluid", style: "border-radius: 1rem 0 0 1rem;") %>
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

                <%= form_with url: session_path, method: :post do |f| %>
                  <div class="d-flex align-items-center mb-3 pb-1">
                    <span class="h1 fw-bold mb-0">Everest</span>
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                  <% if alert %>
                    <div class="alert alert-danger" role="alert">
                      <%= alert %>
                    </div>
                  <% end %>

                  <div class="form-outline mb-4">
                    <%= f.label :email, "Email address"%>
                    <%= f.email_field :email, placeholder: "mail@example.com", required: true %>
                  </div>

                  <div class="form-outline mb-4">
                    <%= f.label :password, "Password" %>
                    <%= f.password_field :password, placeholder: "••••••••••", required: true %>
                  </div>

                  <div class="pt-1 mb-4">
                    <%= f.submit "Login", class: "w-100" %>
                  </div>

                  <p class="mb-5 pb-lg-2" style="color: #393f81;">Don't have an account? <%= link_to "Register here", new_registration_path, style: "color: #393f81;" %></p></p>
                <% end %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
